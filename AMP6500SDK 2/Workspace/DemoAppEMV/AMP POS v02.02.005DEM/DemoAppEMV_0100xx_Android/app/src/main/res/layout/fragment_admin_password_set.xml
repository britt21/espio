<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        style="@style/AMPFontBook_body_copy"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Password change required"
        android:textAppearance="?android:textAppearanceMedium"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="New password">

        <EditText
            style="@style/AMPFontBook_body_copy"
            android:id="@+id/new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="@string/alphanumeric"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:singleLine="true">

            <requestFocus />
        </EditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_password_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:hint="Re-enter new password">

        <EditText
            style="@style/AMPFontBook_body_copy"
            android:id="@+id/new_password_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="@string/alphanumeric"
            android:ems="10"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:singleLine="true">
        </EditText>

    </android.support.design.widget.TextInputLayout>
</LinearLayout>