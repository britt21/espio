<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pale_grey"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <TextView
        android:id="@+id/screen_title"
        style="@style/AMPFontBook_section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/material_resting_elevation"
        android:gravity="center"
        android:padding="@dimen/white_spacer_point_five"
        tools:text="Enter expiry date" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@null">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/container_max_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@color/white"
                android:elevation="@dimen/material_resting_elevation"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtAmount"
                        style="@style/AMPFontBook_amount_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/white_spacer_point_five"
                        android:paddingTop="@dimen/white_spacer_point_five"
                        tools:text="1219" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_divider_color" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn1"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:paddingTop="@dimen/white_spacer_regular"
                            android:text="1"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn2"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:paddingTop="@dimen/white_spacer_regular"
                            android:text="2"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn3"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:paddingTop="@dimen/white_spacer_regular"
                            android:text="3"
                            android:textSize="28.8sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn4"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="4"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn5"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="5"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn6"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="6"
                            android:textSize="28.8sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn7"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="7"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn8"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="8"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn9"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="9"
                            android:textSize="28.8sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnclr"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="Clear"
                            android:textAllCaps="false"
                            android:textSize="16.8sp" />

                        <Button
                            android:id="@+id/btn0"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="0"
                            android:textSize="28.8sp" />

                        <Button
                            android:id="@+id/btn00"
                            style="@style/AMPFontBook_body_copy"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:paddingBottom="@dimen/white_spacer_regular"
                            android:text="00"
                            android:textSize="28.8sp" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/white_spacer_point_five"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/btncancel"
                        style="@style/AMPButton_style_grey"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/white_spacer_point_five"
                        android:layout_weight="1"
                        tools:text="@string/default_text" />

                    <Button
                        android:id="@+id/btnenter"
                        style="@style/AMPButton_style_turquoise"
                        android:layout_width="0dp"
                        android:layout_margin="@dimen/white_spacer_point_five"
                        android:layout_weight="1"
                        tools:text="@string/default_text" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>